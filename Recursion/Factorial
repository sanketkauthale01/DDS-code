#include <iostream>
using namespace std;

int fac(int n){
    if(n==0||n==1){
        return 1;
    }
    else{
        return n*fac(n-1);
    }
}

int main() {
int num;
cout<<"enter non-negetive number:";
cin>>num;
if(num<0){
    cout<<"factorial cant be defined";
    
}
else{
    cout<<"factorial of "<<num<<" is "<<fac(num) <<endl;
}

    return 0;
    
    
}
